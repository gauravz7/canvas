:root {
  --bg-color: #0b0f1a;
  --card-bg: rgba(32, 33, 36, 0.6);
  /* Google Dark Grey-ish */
  --text-primary: #e8eaed;
  --text-secondary: #9aa0a6;
  --accent-primary: #4285F4;
  /* Google Blue */
  --accent-secondary: #EA4335;
  /* Google Red */
  --accent-tertiary: #FBBC05;
  /* Google Yellow */
  --accent-success: #34A853;
  /* Google Green */
  --glass-border: rgba(255, 255, 255, 0.08);
  --success-color: #34A853;
  --glow-color: rgba(66, 133, 244, 0.3);
  --sidebar-width: 280px;
}

body {
  margin: 0;
  font-family: 'Outfit', 'Inter', system-ui, -apple-system, sans-serif;
  background-color: var(--bg-color);
  color: var(--text-primary);
  min-height: 100vh;
  background-image:
    radial-gradient(circle at 0% 0%, rgba(66, 133, 244, 0.15) 0%, transparent 50%),
    radial-gradient(circle at 100% 100%, rgba(52, 168, 83, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 50% 50%, rgba(234, 67, 53, 0.05) 0%, transparent 50%);
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  overflow: hidden;
}

#root {
  width: 100%;
  margin: 0;
  padding: 0;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

header {
  animation: fadeInDown 0.8s ease-out;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.glass-panel {
  background: var(--card-bg);
  backdrop-filter: blur(32px);
  -webkit-backdrop-filter: blur(32px);
  border: 0.5px solid var(--glass-border);
  border-radius: 1.5rem;
  padding: 2.5rem;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5), inset 0 0 24px rgba(255, 255, 255, 0.02);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.glass-panel:hover {
  border-color: rgba(255, 255, 255, 0.1);
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.7), 0 0 30px var(--glow-color);
  transform: translateY(-2px);
}

